{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2015",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
